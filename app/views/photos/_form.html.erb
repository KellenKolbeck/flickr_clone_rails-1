<%= form_tag(photos_create_path, method: 'post', multipart: true) do %>

  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>

  <div class="form-group">
    <%= label_tag "Tags" %>
    <%= text_field_tag :name %>
  </div>

  <div class="form-group">
    <% @users.each do |u| %>
    <%= label_tag u.name %>
    <%= check_box_tag "User[#{u.name}]", u.name %>
    <% end %>
  </div>

  <div class="form-group">
    <%= label_tag "Upload" %>
    <%= file_field_tag :image %>
  </div>

  <%= submit_tag "Add Photo", class: "btn btn-success" %>

<% end %>
